  "devDependencies": {
    "@types/node": "^24.10.1",
    "hardhat": "^2.22.17",
    "prettier": "^3.7.3",
    "prettier-plugin-sh": "^0.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "^16.0.0 || ^18.0.0",
    "npm": ">=7.0.0"
  }
